<?xml version='1.0'?>
<sdf version="1.5">
  <model name="isabelle">
        <pose>0 0 0 0 0 0</pose>
        <static>false</static>
          <link name="chassis">
            <collision name="collision">
              <geometry>
                <box>
                  <size>.4 .2 .1</size>
                </box>
              </geometry>
            </collision>

            <visual name="visual">
              <geometry>
                <box>
                  <size>.4 .2 .1</size>
                </box>
              </geometry>
            </visual>
          </link>
       
      <link name="back_left_wheel">
        <pose>0.12 0.0762 0.2 0 1.5707 1.5707</pose>
        
        <collision name="collision">
          <geometry>
            <cylinder>
              <radius>.07</radius>
              <length>.05</length>
            </cylinder>
          </geometry>
        </collision>

        <visual name="visual">
          <geometry>
            <cylinder>
              <radius>.07</radius>
              <length>.05</length>
            </cylinder>
          </geometry>
        </visual>

      </link>

      <link name="back_right_wheel">
        <pose>0.12 -0.0762 0.2 0 1.5707 1.5707</pose>
        
        <collision name="collision">
          <geometry>
            <cylinder>
              <radius>.07</radius>
              <length>.05</length>
            </cylinder>
          </geometry>
        </collision>
        
        <visual name="visual">
          <geometry>
            <cylinder>
              <radius>.07</radius>
              <length>.05</length>
            </cylinder>
          </geometry>
        </visual>
      
      </link>

      <link name="front_left_wheel">
        <pose>-0.12 0.0762 0.2 0 1.5707 1.5707</pose>
        
        <collision name="collision">
          <geometry>
            <cylinder>
              <radius>.07</radius>
              <length>.05</length>
            </cylinder>
          </geometry>
        </collision>
        
        <visual name="visual">
          <geometry>
            <cylinder>
              <radius>.07</radius>
              <length>.05</length>
            </cylinder>
          </geometry>
        </visual>
      
      </link>

      <link name="front_right_wheel">
        <pose>-0.12 -0.0762 0.2 0 1.5707 1.5707</pose>
        
        <collision name="collision">
          <geometry>
            <cylinder>
              <radius>.07</radius>
              <length>.05</length>
            </cylinder>
          </geometry>
        </collision>
        
        <visual name="visual">
          <geometry>
            <cylinder>
              <radius>.07</radius>
              <length>.05</length>
            </cylinder>
          </geometry>
        </visual>
      
      </link>

      <joint type="revolute" name="back_left_wheel_hinge">
        <pose>-0.12 0.0762 0.2 0 0</pose>
        <child>back_left_wheel</child>
        <parent>chassis</parent>
        <axis>
          <xyz>0 1 0</xyz>
          <use_parent_model_frame>true</use_parent_model_frame>
        </axis>

      </joint>

      <joint type="revolute" name="back_right_wheel_hinge">
        <pose>0.12 -0.0762 0.2 0 0 0</pose>
        <child>back_right_wheel</child>
        <parent>chassis</parent>
        <axis>
          <xyz>0 1 0</xyz>
          <use_parent_model_frame>true</use_parent_model_frame>
        </axis>
      
      </joint>

      <joint type="revolute" name="front_left_wheel_hinge">
        <pose>-0.12 0.0762 0.2 0 0 0</pose>
        <child>front_left_wheel</child>
        <parent>chassis</parent>
        <axis>
          <xyz>0 1 0</xyz>
          <use_parent_model_frame>true</use_parent_model_frame>
        </axis>
      
      </joint>

      <joint type="revolute" name="front_right_wheel_hinge">
        <pose>-0.12 -0.0762 0.2 0 0 0</pose>
        <child>front_right_wheel</child>
        <parent>chassis</parent>
        <axis>
          <xyz>0 1 0</xyz>
          <use_parent_model_frame>true</use_parent_model_frame>
        </axis>
      
      </joint>
    
    <!-- <include>
      <uri>model://depth_camera</uri>
      <pose>0.2 0 0.1 0 0 0</pose>
    </include> -->
    <link name = "imu_link">
      <pose> 0 0 0.1</pose>
      <visual name = "imu_visual">
        <geometry>
          <box>
            <size> 0.01 0.01 0.01 </size>
          </box>
        </geometry>
      </visual>
      
      <collision name = "imu_collision">
        <geometry>
          <box>
            <size> 0.01 0.01 0.01 </size>
          </box>
        </geometry>
      </collision>

      <sensor name = "imu_sensor" type = "imu">
        <always_on>true</always_on>
        <plugin filename = "libgazebo_ros_imu_sensor.so" name = "imu_plugin">
          <robotNamespace>isabelle</robotNamespace>
          <topicName>imu</topicName>
          <updateRateHZ>30</updateRateHZ>
          <frameName>imu_link</frameName>
          <initialOrientationAsReference>false</initialOrientationAsReference>
        </plugin>
      </sensor>
    </link>
    
    <joint name ="imu_joint" type ="fixed">
      <parent>chassis</parent>
      <child>imu_link</child>
    </joint>
    
    <joint name="dc_joint" type="fixed">
      <child>dc_link</child>
      <parent>chassis</parent>
      <axis>
          <xyz>1 0 0</xyz>
          <use_parent_model_frame>true</use_parent_model_frame>
      </axis>
    </joint>
    
    <link name = "dc_link">
      <pose>0.2 0 0.1 0 0 0</pose>
      <collision name = "dc_collision">
      	<pose> 0.2 0 0.1 0 0</pose>
        <geometry> 
          <box> 
          <size> 0.02 0.1016 0.02 </size> 
          </box> 
        </geometry> 
      </collision> 
      
      <visual name = "dc_visual">
        <pose> 0.2 0 0.1 0 0 </pose>
        <geometry> 
        	<box> 
          	<size> 0.02 0.1016 0.02 </size> 
          </box> 
        </geometry>
        
        <material>
        	<script> 
        	<color>Gazebo Grey</color> 
        	</script>
        </material>
      
      </visual>
      
      <sensor type = "depth" name = "depth_camera">      	
      	<always_on>0</always_on>
        <updateRate>20</updateRate>

        <camera name="isabelle_dc">
         	<horizontal_fov>1.57079</horizontal_fov>
          <image>
          	<width>640</width>
            <height>480</height>
          </image>
          <clip>
          	<near>0.5</near>
            <far>25</far>
          </clip>
          <distortion>
            <k1>0.0</k1>
            <k2>0.0</k2>
            <k3>0.0</k3>
            <p1>0.0</p1>
            <p2>0.0</p2>
            <center>0.0 0.0</center>
          </distortion>
        </camera>
        
        <plugin name = "isabelle_dc_plugin" filename ="libgazebo_ros_depth_camera.so">
                    <robotNamespace>isabelle</robotNamespace>
                    <always_on>true</always_on>
                    <updateRate>20</updateRate> <!-- use sensor rate -->
                    <cameraName>isabelle_dc</cameraName>

                    <baseline>0.05</baseline>
                    <pointCloudCutoff>0.05</pointCloudCutoff>
                    <pointCloudCutoffMax>20</pointCloudCutoffMax>

                    <!-- configure output topics; will be prepended with robotNamespace value (AKA relative names) -->
                    <imageTopicName>image</imageTopicName>
                    <cameraInfoTopicName>image/camera_info</cameraInfoTopicName>
                    <depthImageTopicName>depth/image</depthImageTopicName>
                    <depthImageCameraInfoTopicName>depth/camera_info</depthImageCameraInfoTopicName>
                    <pointCloudTopicName>depth/points</pointCloudTopicName>

                    <!-- Set TF frame name. If empty, defaults to link name (i.e. "link_name") -->
                    <frameName>dc_link</frameName> <!-- namespaced -->
                    
                    <distortionK1>0.0</distortionK1>
                    <distortionK2>0.0</distortionK2>
                    <distortionK3>0.0</distortionK3>
                    <distortionT1>0.0</distortionT1>
                    <distortionT2>0.0</distortionT2>
       </plugin>
      </sensor>
    </link>

    <plugin name = "differential_drive_controller" filename = "libgazebo_ros_diff_drive.so">
      <always_on>true</always_on>
      <rosDebugLevel>debug</rosDebugLevel>

      <updateRate>20</updateRate>
      <leftJoint>back_left_wheel_hinge</leftJoint>
      <leftJoint>front_left_wheel_hinge</leftJoint>
      <rightJoint>back_right_wheel_hinge</rightJoint> 
      <rightJoint>front_right_wheel_hinge</rightJoint>
      <wheelSeparation>0.4</wheelSeparation>
      <torque>20</torque>

      <odometrySource>world</odometrySource> 
      <publishOdom>true</publishOdom> 
      <updateRate>100</updateRate>

      <publishTf>true</publishTf>
      <publishOdomTF>true</publishOdomTF>
      <publishWheelTF>true</publishWheelTF>
      <commandTopic>/cmd_vel</commandTopic>
      <odometryTopic>odom</odometryTopic>
      <robotBaseFrame>chassis</robotBaseFrame>
    </plugin>
  </model>
</sdf>
