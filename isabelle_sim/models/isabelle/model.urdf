<?xml version = "1.0" ?>
<!--TODO: Finish the links and joints of the sensors -->
<robot name="isabelle">
    
    <joint name ="back_left_wheel_hinge" type = "revolute">
        <parent link = "chassis"/>
        <child link = "back_left_wheel"/>
        <origin xyz ="-.09779 -.09 -.01079" rpy = "0 0 0"/>
        <axis xyz = "0 1 0"/>
        <limit lower = "0" upper = "0" effort = "0" velocity = "0"/>
    </joint>

    <joint name ="back_right_wheel_hinge" type = "revolute">
        <parent link = "chassis"/>
        <child link = "back_right_wheel"/>
        <origin xyz ="-.09779 .09 -.01079" rpy = "0 0 0"/>
        <axis xyz = "0 1 0"/>
        <limit lower = "0" upper = "0" effort = "0" velocity = "0"/>
    </joint>

    <joint name ="front_left_wheel_hinge" type = "revolute">
        <parent link = "chassis"/>
        <child link = "front_left_wheel"/>    
        <origin xyz =".09779 -0.09 -.01079" rpy = "0 0 0"/>
        <axis xyz = "0 1 0"/>
        <limit lower = "0" upper = "0" effort = "0" velocity = "0"/>
    </joint>

    <joint name ="front_right_wheel_hinge" type = "revolute">
        <parent link = "chassis"/>
        <child link = "front_right_wheel"/>
        <origin xyz =".09779 0.09 -.01079" rpy = "0 0 0"/>
        <axis xyz = "0 1 0"/>
        <limit lower = "0" upper = "0" effort = "0" velocity = "0"/>
    </joint>

    <link name = "chassis">
        <inertial>
            <mass value = "2.25"/>
            <origin xyz = "0 0 0" rpy = "0 0 0"/>
            <inertia ixx = ".0322" ixy = "0" ixz = "0" iyy = ".0378" iyz = "0" izz = "0.01"/> <!-- inertias are tricky: http://wiki.ros.org/urdf/Tutorials/Adding%20Physical%20and%20Collision%20Properties%20to%20a%20URDF%20Model#Joint_Dynamics-->
        </inertial>

        <collision name="collision">
            <origin xyz = "0 0 0" rpy = "0 0 0"/>
            <geometry>
              <box size = ".254 .1524 .04"/>
            </geometry>
        </collision>

        <visual name="visual">
            <origin xyz = "0 0 0" rpy = "0 0 0"/>
            <geometry>
              <box size = ".254 .1524 .04"/>
            </geometry>
        </visual>
    </link>

    <link name = "back_left_wheel">
      
      <inertial>
        <mass value = ".045"/>
        <origin xyz = "0 0 0" rpy = "0 0 0"/>
        <inertia ixx = ".00007" ixy = "0" ixz = "0" iyy = ".00007" iyz = "0" izz = ".000018375"/>
      </inertial>

      <collision name = "collision">
        <origin xyz = "0 0 0" rpy = "-1.5707 0 0"/>
        <geometry>
            <cylinder radius = ".07" length = ".05"/>
        </geometry>
      </collision>

      <visual name = "visual">
        <origin xyz = "0 0 0" rpy = "-3.14159 0 0"/>
        <geometry>
          <cylinder radius = ".07" length = ".05"/>
        </geometry>
      </visual> 

    </link>

    <link name = "back_right_wheel">
      
      <inertial>
        <mass value = ".045"/>
        <origin xyz = "0 0 0" rpy = "0 0 0"/>
        <inertia ixx = ".00007" ixy = "0" ixz = "0" iyy = ".00007" iyz = "0" izz = ".000018375"/>
      </inertial>
      
      <collision name = "collision">
        <origin xyz = "0 0 0" rpy = "-1.5707 0 0"/>
        <geometry>
            <cylinder radius = ".07" length = ".05"/>
        </geometry>
      </collision>
      
      <visual name = "visual">
        <origin xyz = "0 0 0" rpy = "-3.14159 0 0"/>
        <geometry>
            <cylinder radius = ".07" length = ".05"/>
        </geometry>
      </visual> 
    
    </link>

    <link name = "front_left_wheel">
      
      <inertial>
        <mass value = ".045"/>
        <origin xyz = "0 0 0" rpy = "0 0 0"/>
        <inertia ixx = ".00007" ixy = "0" ixz = "0" iyy = ".00007" iyz = "0" izz = ".000018375"/>
      </inertial>
      
      <collision name = "collision">
        <origin xyz = "0 0 0" rpy = "-1.5707 0 0"/>
        <geometry>
          <cylinder radius = ".07" length = ".05"/>
        </geometry>
      </collision>
      
      <visual name = "visual">
        <origin xyz = "0 0 0" rpy = "-3.14159 0 0"/>
        <geometry>
          <cylinder radius = ".07" length = ".05"/>
        </geometry>
      </visual> 
   
    </link>
  
    <link name = "front_right_wheel">
      
      <inertial>
        <mass value = ".045"/>
        <origin xyz = "0 0 0" rpy = "0 0 0"/>
        <inertia ixx = ".00007" ixy = "0" ixz = "0" iyy = ".00007" iyz = "0" izz = ".000018375"/>
      </inertial>
      
      <collision name = "collision">
        <origin xyz = "0 0 0" rpy = "-1.5707 0 0"/>
        <geometry>
          <cylinder radius = ".07" length = ".05"/>
        </geometry>
      </collision>
      
      <visual name = "visual">
        <origin xyz = "0 0 0" rpy = "-3.14159 0 0"/>
        <geometry>
         <cylinder radius = ".07" length = ".05"/>
        </geometry>
      </visual>
    
    </link>

    <joint name = "imu joint" type = "fixed">
      <parent link = "chassis"/>
      <child link = "imu_link"/>
      <origin xyz = "0 0 0.1"/>
    </joint>

    <link name =  "imu_link">
      <pose> 0 0 0.1</pose>
      <visual>
        <geometry>
          <box size = "0.01 0.01 0.01"/>
        </geometry>
      </visual>
      
      <collision>
        <geometry>
            <box size = "0.01 0.01 0.01"/>
        </geometry>
      </collision>
    
    </link>

    <joint name = "camera_joint" type = "fixed">
      <parent link = "chassis"/>
      <child link = "camera_link"/>
      <origin xyz = "0.0 0.0 0.385" rpy = "1.5708 3.14159 1.5708"/>
      <axis xyz = "0 1 0"/>
      <limit lower = "0" upper = "0" effort = "0" velocity = "0"/>
    </joint>

    <link name =  "camera_link">
      
      <collision name = "camera_collision">
        <pose> 0.2 0 0.1 0 0</pose>
        <geometry> 
          <box size = "0.02 0.09 0.02" /> 
        </geometry> 
      </collision> 
      
      <visual name = "camera_visual">
       <pose> 0.2 0 0.1 0 0 </pose>
        <geometry> 
         <box size = "0.02 0.09 0.02" /> 
        </geometry> 
      </visual>
    </link>
      
</robot>
